@model ProductViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImgUrl" hidden/>
            <div class=row>
                <div class="col-10">
                    <div class="border-0 p-3">
                        <div>
                            <label asp-for="Product.Name" class="form-label mt-4"></label>
                            <input class="form-control" asp-for="Product.Name">
                            <span class="text-danger" asp-validation-for="Product.Name"></span>
                        </div>
                        <div>
                            <label asp-for="Product.Author" class="form-label mt-4"></label>
                            <input class="form-control" asp-for="Product.Author">
                            <span class="text-danger" asp-validation-for="Product.Author"></span>
                        </div>
                        <div>
                            <label asp-for="Product.Description" class="form-label mt-4"></label>
                            <textarea class="form-control border-0 shadow" asp-for="Product.Description"></textarea>
                        </div>
                        <div>
                            <label asp-for="Product.ISBN" class="form-label mt-4"></label>
                            <input class="form-control" asp-for="Product.ISBN">
                            <span class="text-danger" asp-validation-for="Product.ISBN"></span>
                        </div>
                        <div>
                            <label asp-for="Product.ListPrice" class="form-label mt-4"></label>
                            <input class="form-control" asp-for="Product.ListPrice">
                            <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
                        </div>
                        <div>
                            <label asp-for="Product.ImgUrl" class="form-label mt-4"></label>
                            <input class="form-control" name="file" type="file">
                        </div>
                        <div>
                            <label asp-for="Product.CategoryId" class="form-label mt-4"></label>
                            <select class="form-control" asp-for="Product.CategoryId" asp-items="@Model.CategoryList">
                                <option disabled selected>Select a Category</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6">
                                @if (Model.Product.Id != 0)
                                {
                                <button type="submit"
                                    class="btn btn-dark btn-btn-outline-dark border form-control">Update</button>
                                }
                                else
                                {
                                <button type="submit"
                                    class="btn btn-dark btn-btn-outline-dark border form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-controller="Product" asp-action="Index"
                                    class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImgUrl" width="100%"/>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons link lists media table visualblocks wordcount linkchecker',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>
}
}