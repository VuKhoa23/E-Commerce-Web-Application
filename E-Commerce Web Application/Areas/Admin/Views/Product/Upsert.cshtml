@model ProductViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                    <h2 class="py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden/>
            <div class="border p-3">
                <div>
                    <label asp-for="Product.Name" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Product.Name">
                    <span class="text-danger" asp-validation-for="Product.Name"></span>
                </div>
                <div>
                    <label asp-for="Product.Author" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Product.Author">
                    <span class="text-danger" asp-validation-for="Product.Author"></span>
                </div>
                <div>
                    <label asp-for="Product.Description" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Product.Description">
                    <span class="text-danger" asp-validation-for="Product.Description"></span>
                </div>
                <div>
                    <label asp-for="Product.ISBN" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Product.ISBN">
                    <span class="text-danger" asp-validation-for="Product.ISBN"></span>
                </div>
                <div>
                    <label asp-for="Product.ListPrice" class="form-label mt-4"></label>
                    <input class="form-control" asp-for="Product.ListPrice">
                    <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
                </div
                 <div>
                    <label asp-for="Product.ImgUrl" class="form-label mt-4"></label>
                    <input class="form-control" type="file">
                </div>
                <div>
                    <label asp-for="Product.CategoryId" class="form-label mt-4"></label>
                    <select class="form-control" asp-for="Product.CategoryId" asp-items="@Model.CategoryList">
                        <option disabled selected>Select a Category</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-dark btn-btn-outline-dark border form-control">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
