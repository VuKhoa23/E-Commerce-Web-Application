@model List<Product>
<div class="container">
	<div class="row pt-4 pb-2 align-items-center">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn-dark btn">
				<i class="bi bi-plus-circle"></i> Create Product
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead class="table-dark">
		<tr>
			<th>Book Name</th>
			<th>Author</th>
			<th>Description</th>
			<th>ISBN</th>
			<th>Price</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.Author
				</td>
				<td>
					@obj.Description
				</td>
				<td>
					@obj.ISBN
				</td>
				<td>
					@obj.ListPrice
				</td>
				<td>
					Not Implemented
				</td>
				<td>
					<div class="w-100 d-flex justify-content-between">
						<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-dark mx-2 w-50">
							<i class="bi bi-pencil-fill"></i>
						</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 w-50">
							<i class="bi bi-trash-fill"></i>
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>

</table>