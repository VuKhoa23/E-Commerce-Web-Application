@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="py-2">Create Category</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div>
                  <label asp-for="Name" class="form-label mt-4"></label>
                  <input class="form-control" asp-for="Name">
                </div>
                <div>
                  <label asp-for="DisplayOrder" class="form-label mt-4"></label>
                  <input class="form-control" asp-for="DisplayOrder">
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-dark btn-btn-outline-dark border form-control">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
